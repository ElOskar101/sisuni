
@using System.Web.Optimization;
<html style="height: auto; min-height: 100%;">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Sisuni | @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/images/logo.png" type="image/x-icon">

    @Styles.Render("~/bundles/bootstrap/css")

</head>
<!-- ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR. -->
<body class="skin-blue layout-top-nav" style="height: auto; min-height: 100%;">
    <div class="wrapper" style="height: auto; min-height: 100%;">

        <header class="main-header">
            <nav class="navbar navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        @Html.ActionLink("Mis cursos", "Index", "Dash", null, new { @class = "navbar-brand" })
                        <!--<a href="" class="navbar-brand"><b>Sisuni</b></a>-->
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li> @Html.ActionLink("Buscar Cursos", "Index", "Search")</li>
                        </ul>
                    </div>


                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <img src="~/Content/images/user.png" class="user-image" alt="User Image">
                                    <span class="hidden-xs">@Session["Name"]@Session["LastName"]</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="user-header">
                                        <img src="~/Content/images/user.png" class="img-circle" alt="User Image">
                                        <p>
                                           @Session["Name"]@Session["LastName"]
                                            <small>@Session["Identification"]</small>
                                        </p>
                                    </li>
   
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                    @using (Html.BeginForm("Logout", "Dash")) {

                                        <div class="pull-right">
                                            <button class="btn btn-default btn-block btn-flat">Cerrar Sesión</button>
                                        </div>
                                    }
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-custom-menu -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Full Width Column -->
        <div class="content-wrapper" style="min-height: 566px;">
            <div class="container">
                <!-- Content Header (Page header)
    <section class="content-header">
        <h1>
            Top Navigation
            <small>Example 2.0</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Layout</a></li>
            <li class="active">Top Navigation</li>
        </ol>
    </section>-->
                <!-- Main content -->
                <section class="content">
                    @RenderBody()

                </section>
            </div>
        </div>
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <b>Versión</b> 0.8 Alpha
                </div>
                <strong>Copyright © 2019-2020 <a>Sisuni</a>.</strong> Todos los derechos reservados (Oscar - Cristhel).
            </div>
            <!-- /.container -->
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap/js")

</body>
</html>















